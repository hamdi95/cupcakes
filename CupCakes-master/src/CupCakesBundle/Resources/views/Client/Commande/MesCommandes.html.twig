{% extends "CupCakesBundle:Client:LayoutC2.html.twig" %}
{% block stylesheet %}
    <style>
        th, td {
            border-bottom: 1px solid #ddd;
        }
    </style>
{% endblock %}
    {% block containt %}
    <!-- Start Main -->
    <main>
        <div class="main-part">
            <!-- Start Breadcrumb Part -->
            <section class="breadcrumb-part" data-stellar-offset-parent="true" data-stellar-background-ratio="0.5" style="background-image: url('{{ asset('ClientTemplate/images/breadbg1.jpg') }}');">
                <div class="container">
                    <div class="breadcrumb-inner">
                        <h2>Mes Commandes</h2>
                        <a href="{{ path('cup_cakes_Eshop') }}">Acceuil</a>
                        <span>Mes Commandes</span>
                    </div>
                </div>
            </section>
            <!-- End Breadcrumb Part -->
            <section class="home-icon shop-cart bg-skeen">
                <div class="icon-default icon-skeen">
                    <img src="{{ asset('ClientTemplate/images/scroll-arrow.png') }}" alt="" />
                </div>
                <div class="container">
                    <div class="track-oder wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
                        <div class="track-oder-inner">
                            <div class="clock-track-icon">
                                <img src="{{ asset('ClientTemplate/images/404.png') }}" alt="" />
                            </div>
                            <div class="track-status">
                                <h3><span>Mes Commande:</span></h3>
                                <table>
                                    <thead>
                                    <th>Id Commande</th>
                                    <th>Nom Produit</th>
                                    <th>Prix Unitaire</th>
                                    <th>Quantite</th>
                                    <th>Montant Total Commande</th>
                                    <th>Date Commande</th>

                                    </thead>
                                        {% for line in LineCmd %}
                                    <tbody>
                                            <tr>
                                                <td>
                                                    {{ line.idCmd.id }}
                                                </td>
                                                <td>
                                                    <div class="product-cart-title">
                                                        <span>{{ line.idProd.nomProd }}</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="product-cart-title">
                                                        <span class="pu">{{ line.idProd.prixProd }}</span>
                                                    </div>
                                                </td>
                                                <td>
                                                            {{ line.qteAcheter }}
                                                </td>
                                                <td>
                                                    <span class="price">{{ line.idCmd.montantCmd }}</span>
                                                </td>

                                                <td>
                                                    <a href="{{ path('AjouterFeedback',{'id': line.idCmd.id }) }}">Feedback</a>
                                                </td>
                                                <td>
                                                   <a href="{{ path('Pdf',{'id' : line.idCmd.id }) }}"><img src="{{ asset('ClientTemplate/images/pdf.png') }}"></a>
                                                </td>
                                                <td>
                                                    <a href="{{ path('TraceCommande',{'id' : line.idCmd.id }) }}"><img src="{{ asset('ClientTemplate/images/suivre.png') }}"></a>
                                                </td>
                                            </tr>
                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <!-- End Main -->

{% endblock %}