{% extends "::layoutf.html.twig" %}

{% block containt %}

    {{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}

    <div class="col-lg-8 col-md-7">
        <div class="card">
            <div class="header">
                <h4 class="title">modifier une session</h4>
            </div>
            <div class="content">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.dateDebSes, {'label':"Date debut session" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.dateFinSes, {'label':"Date fin session" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.capaciteSes, {'label':"Capacite" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.idFor, {'label':"id formation" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.prix, {'label':"id promotion" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                </form>
                <div>
                    <input type="submit" class="btn btn-info btn-fill btn-wd" value="Confirmation" id="enregistrer" />
                    {{ form_row(form._token) }}
                </div>
            </div>

        </div>
    </div>

    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascript %}

        $(function(){
            $("#enregistrer").click(function(event){
                event.preventDefault();
                if(($('#cup_cakes_bundle_session_type_dateDebSes').val()) < ($('#cup_cakes_bundleupdate_session_dateFinSes').val()))
                {
                    $("form").submit();
                }
                else{
                    demo.initChartist();
                    $.notify({
                        icon: 'ti-alert',
                        message: "date debut superieur que la date fin "

                    }, {
                        type: 'success',
                        timer: 4000
                    });
                }
            });

        });


{% endblock %}





