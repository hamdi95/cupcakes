{% extends "::layoutf.html.twig" %}
{% block containt %}

    <div class="col-lg-12 col-md-9">
        <div class="card">
            <div class="header">
                <h4 class="title">Ajouter une recette</h4>
            </div>
            <div class="content">
                <form method="POST">
                    <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_row(form.nomRec, {'label':"Nom" ,'attr': {'class': 'form-control border-input'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_row(form.idCatRec, {'label':"Categorie" ,'attr': {'class': 'form-control border-input'}}) }}
                        </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                {{ form_row(form.descriptionRec, {'label':"Description" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <img src="{{ asset('public/uploads/brochures/Recettes/' ~  recette.imageRec)}}" id="img" style="width: 180px;height: 80px" >
                        </div>
                    </div>
                </div>
                    <div>
                        <input type="submit" class="btn btn-info btn-fill btn-wd" value="Enregistrer" name="submit" />
                        {{ form_row(form._token) }}
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}