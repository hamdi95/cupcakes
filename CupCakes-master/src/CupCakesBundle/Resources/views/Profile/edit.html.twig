{% trans_default_domain 'FOSUserBundle' %}
{% extends "::layout.html.twig" %}
{% block containt %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="card card-user">
                <div class="image">
                    <img src="assets/img/background.jpg" alt="..."/>
                </div>
                <div class="content">
                    <div class="author">
                        <img class="avatar border-white" src="assets/img/faces/face-2.jpg" alt="..."/>
                        <h4 class="title">{{ app.user.username }}<br />
                            <a href="#"><small>@{{ app.user.username }}</small></a>
                        </h4>
                    </div>
                    <p class="description text-center">
                        "I like the way you work it <br>
                        No diggity <br>
                        I wanna bag it up"
                    </p>
                </div>
                <hr>
                <div class="text-center">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-1">
                            <h5>12<br /><small>Files</small></h5>
                        </div>
                        <div class="col-md-4">
                            <h5>2GB<br /><small>Used</small></h5>
                        </div>
                        <div class="col-md-3">
                            <h5>24,6$<br /><small>Spent</small></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-7">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Profile</h4>
                </div>
                <div class="content">
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_row(form.username, {'label':"Nom d'utilisateur" ,'attr': {'class': 'form-control border-input'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.email, {'label':"Email" ,'attr': {'class': 'form-control border-input'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    {{ form_row(form.addresse, {'label':"Adresse" ,'attr': {'class': 'form-control border-input'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    {{ form_row(form.phoneNumber, {'label':"Numero de telephone" ,'attr': {'class': 'form-control border-input'}}) }}
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Mot de passe actuel</label>
                                    {{ form_widget(form.current_password, {'label':"mot de passe actuel" ,'attr': {'class': 'form-control border-input'}}) }}
                                </div>
                            </div>
                        </div>
                        <div>
                            <input type="submit" class="btn btn-info btn-fill btn-wd" value="{{ 'profile.edit.submit'|trans }}" />
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
