{% trans_default_domain 'FOSUserBundle' %}
{% extends "::base.html.twig" %}
{% block titreh3 %}Crer votre compte{% endblock %}
{% block description %}Enter your information to register{% endblock %}
{% block fos_user_content %}
<div class="login">
    <form name="fos_user_registration_form" method="post" action="{{ path('fos_user_registration_register') }}" class="login-form">
        <div class="form-group">
            <div class="form-group">
            <label for="fos_user_registration_form_email" class="sr-only">form.email</label>
                <input type="email" id="fos_user_registration_form_email" class="form-username form-control" placeholder="Email..." name="fos_user_registration_form[email]" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
            <label for="fos_user_registration_form_username" class="sr-only">form.username</label>
                <input type="text" id="fos_user_registration_form_username" class="form-username form-control" name="fos_user_registration_form[username]" required="required" maxlength="180" pattern=".{2,}" placeholder="Nom d'utilisateur...">
            </div>
        </div>
            <div class="form-group">
                <div class="form-group">
                <label for="fos_user_registration_form_plainPassword_first" class="sr-only">form.password</label>
                <input type="password" id="fos_user_registration_form_plainPassword_first" class="form-username form-control" name="fos_user_registration_form[plainPassword][first]" required="required" autocomplete="new-password" placeholder="Mot de passe...">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="fos_user_registration_form_plainPassword_second" class="sr-only">form.password_confirmation</label>
                <input type="password" id="fos_user_registration_form_plainPassword_second" class="form-username form-control" name="fos_user_registration_form[plainPassword][second]" required="required" autocomplete="new-password" placeholder="Confirmation de mot de passe...">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="fos_user_registration_form_phoneNumber" class="sr-only">Phone number</label>
                <input type="text" id="fos_user_registration_form_phoneNumber" class="form-username form-control" name="fos_user_registration_form[phoneNumber]" required="required" placeholder="Numero de telephone...">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="fos_user_registration_form_addresse" class="sr-only">Addresse</label>
                <input type="text" id="fos_user_registration_form_addresse" class="form-username form-control" name="fos_user_registration_form[addresse]" required="required" placeholder="Adresse...">
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="fos_user_registration_form_roles" class="sr-only">Role</label>
                <select id="fos_user_registration_form_roles" name="fos_user_registration_form[roles][]" required="required" class="form-username form-control">
                    <option value="ROLE_PATISSERIE">Patisserie</option>
                    <option value="ROLE_FORMATEUR">Formateur</option>
                    <option value="ROLE_CLIENT">Client</option>
                </select>
            </div>
        </div>
        <div>
            <input type="submit" class="btn" value="registration.submit">
        </div>
        {{ form_row(form._token) }}
    </form>
</div>
{% endblock fos_user_content %}
